<style>
  #shopify-section-{{ section.id }} .section-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .section-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #shopify-section-{{ section.id }} .l2l-single-image {
    text-align: center;
  }

  #shopify-section-{{ section.id }} .l2l-single-image__container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  #shopify-section-{{ section.id }} .l2l-single-image__heading {
    margin-bottom: 2rem;
  }

  #shopify-section-{{ section.id }} .l2l-single-image__heading h2 {
    margin: 0;
    font-size: 2.4rem;
  }

  #shopify-section-{{ section.id }} .l2l-single-image__media {
    margin: 0 auto;
    max-width: {{ section.settings.image_width }}px;
    border-radius: {{ section.settings.image_radius }}px;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .l2l-single-image__media img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.image_radius }}px;
  }

  #shopify-section-{{ section.id }} .l2l-single-image__caption {
    margin-top: 0.5rem;
    margin-bottom: 2rem;
    font-size: 1.1rem;
    color: rgba(18, 18, 18, 0.75);
    line-height: 1.5;
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} .l2l-single-image__media {
      max-width: 100%;
    }
  }
</style>

<div class="l2l-single-image section-padding">
  <div class="l2l-single-image__container">
    {%- if section.settings.heading != blank -%}
      <div class="l2l-single-image__heading">
        <h2 class="h1">{{ section.settings.heading | escape }}</h2>
      </div>
    {%- endif -%}

    {%- if section.settings.caption != blank -%}
      <div class="l2l-single-image__caption">
        {{ section.settings.caption | escape }}
      </div>
    {%- endif -%}

    <div class="l2l-single-image__media">
      {%- if section.settings.image != blank -%}
        {%- if section.settings.image_link != blank -%}
          <a href="{{ section.settings.image_link }}">
        {%- endif -%}
        <img
          src="{{ section.settings.image | image_url: width: 1500 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
        {%- if section.settings.image_link != blank -%}
          </a>
        {%- endif -%}
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "L2L Single Image",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Optional heading above the image"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Subtitle",
      "info": "Optional subtitle below the heading"
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Image link",
      "info": "Optional link when clicking the image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 400,
      "max": 1400,
      "step": 100,
      "unit": "px",
      "label": "Maximum image width",
      "default": 800
    },
    {
      "type": "range",
      "id": "image_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image corner radius",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "L2L Single Image"
    }
  ]
}
{% endschema %}