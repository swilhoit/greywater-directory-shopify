<style>
  .l2l-faq-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .l2l-faq-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .l2l-faq-header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: 3rem;
  }

  .l2l-faq-header h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: {{ section.settings.heading_color }};
    margin-bottom: 1rem;
  }

  .l2l-faq-header p {
    font-size: 1.1rem;
    color: {{ section.settings.text_color }};
    max-width: 700px;
    margin: 0 auto;
  }

  .l2l-faq-item {
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 8px;
    margin-bottom: 1rem;
    overflow: hidden;
    transition: box-shadow 0.3s;
  }

  .l2l-faq-item:hover {
    
  }

  .l2l-faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: {{ section.settings.question_bg }};
    cursor: pointer;
    border: none;
    width: 100%;
    text-align: left;
    font-size: 1.1rem;
    font-weight: 600;
    color: {{ section.settings.heading_color }};
  }

  .l2l-faq-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    transition: transform 0.3s;
  }

  .l2l-faq-item.active .l2l-faq-icon {
    transform: rotate(180deg);
  }

  .l2l-faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .l2l-faq-item.active .l2l-faq-answer {
    max-height: 500px;
  }

  .l2l-faq-answer-content {
    padding: 1.25rem;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    background: {{ section.settings.answer_bg }};
  }

  .l2l-faq-answer-content ul,
  .l2l-faq-answer-content ol {
    margin: 1rem 0 1rem 2rem;
  }

  .l2l-faq-answer-content li {
    margin-bottom: 0.5rem;
  }
</style>

<div class="l2l-faq-section">
  <div class="l2l-faq-container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="l2l-faq-header">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p>{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="l2l-faq-list">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'faq_item' %}
            <div class="l2l-faq-item" {{ block.shopify_attributes }}>
              <button class="l2l-faq-question" onclick="this.parentElement.classList.toggle('active')">
                <span>{{ block.settings.question }}</span>
                <svg class="l2l-faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div class="l2l-faq-answer">
                <div class="l2l-faq-answer-content">
                  {{ block.settings.answer }}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.l2l-faq-item');

    faqItems.forEach(item => {
      const question = item.querySelector('.l2l-faq-question');
      question.addEventListener('click', function(e) {
        e.preventDefault();
      });
    });
  });
</script>

{% schema %}
{
  "name": "L2L FAQ Accordion",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Everything you need to know about greywater systems"
    },
    {
      "type": "select",
      "id": "header_alignment",
      "label": "Header Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Maximum Width",
      "min": 600,
      "max": 1400,
      "step": 100,
      "default": 900,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "question_bg",
      "label": "Question Background",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "answer_bg",
      "label": "Answer Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#e0e0e0"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Is a permit required for laundry-to-landscape systems?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>In many states, laundry-to-landscape systems don't require permits when they meet specific criteria: no cutting into existing plumbing, water stays on your property, and proper mulch basins are used. Always check your local regulations.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "L2L FAQ Accordion"
    }
  ]
}
{% endschema %}