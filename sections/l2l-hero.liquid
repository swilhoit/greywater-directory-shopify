      "id": "hero_gradient",
      "label": "Background Gradient",
      "default": "linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%)"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "button_bg",
