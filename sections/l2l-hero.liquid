      "type": "color",
      "id": "notice_headline_color",
      "label": "Notice Headline Color",
      "default": "#6c5300"
    },
    {
      "type": "color",
      "id": "notice_text_color",
      "label": "Notice Text Color",
      "default": "#856404"
    },
    {
      "type": "color",
      "id": "notice_link_color",
      "label": "Notice Link Color",
      "default": "#856404"
    }
  ],
  "presets": [
    {
      "name": "L2L Hero"
    }
  ]
