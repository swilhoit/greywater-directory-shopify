    },
    {
      "type": "text",
      "id": "notice_headline",
      "label": "Notice Headline",
      "default": "Rebate Alert!"
    },
    {
      "type": "text",
      "id": "notice_text",
      "label": "Notice Text",
      "default": "Rebates may be available in your city!"
    },
    {
      "type": "text",
      "id": "notice_link_text",
      "label": "Link Text",
      "default": "Check availability"
    },
    {
      "type": "url",
