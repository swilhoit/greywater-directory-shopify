<style>
  .l2l-video-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .l2l-video-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .l2l-video-header {
    text-align: {{ section.settings.text_alignment }};
    margin-bottom: 2rem;
  }

  .l2l-video-header h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: {{ section.settings.heading_color }};
    margin-bottom: 1rem;
  }

  .l2l-video-header p {
    font-size: 1.1rem;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
  }

  .l2l-video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.15);
  }

  .l2l-video-wrapper iframe,
  .l2l-video-wrapper video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .l2l-video-placeholder {
    position: relative;
    cursor: pointer;
    overflow: hidden;
    border-radius: 12px;
  }

  .l2l-video-placeholder img {
    width: 100%;
    height: auto;
    display: block;
  }

  .l2l-video-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    background: rgba(0,0,0,0.8);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s;
  }

  .l2l-video-placeholder:hover .l2l-video-play-button {
    background: rgba(0,0,0,0.9);
  }

  .l2l-video-play-icon {
    width: 0;
    height: 0;
    border-left: 25px solid white;
    border-top: 15px solid transparent;
    border-bottom: 15px solid transparent;
    margin-left: 5px;
  }

  .l2l-video-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .l2l-video-feature {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .l2l-video-feature-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    background: {{ section.settings.icon_background }};
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }

  .l2l-video-feature-text h3 {
    font-size: 1.1rem;
    color: {{ section.settings.heading_color }};
    margin-bottom: 0.5rem;
  }

  .l2l-video-feature-text p {
    font-size: 0.95rem;
    color: {{ section.settings.text_color }};
    line-height: 1.5;
  }
</style>

<div class="l2l-video-section">
  <div class="l2l-video-container">
    {% if section.settings.heading != blank or section.settings.description != blank %}
      <div class="l2l-video-header">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="l2l-video-wrapper" id="video-{{ section.id }}">
      {% if section.settings.video_type == 'youtube' %}
        {% if section.settings.youtube_id != blank %}
          {% if section.settings.thumbnail_image %}
            <div class="l2l-video-placeholder" onclick="loadYouTubeVideo('{{ section.id }}', '{{ section.settings.youtube_id }}')">
              {{ section.settings.thumbnail_image | image_url: width: 1200 | image_tag }}
              <div class="l2l-video-play-button">
                <div class="l2l-video-play-icon"></div>
              </div>
            </div>
          {% else %}
            <iframe
              src="https://www.youtube.com/embed/{{ section.settings.youtube_id }}?rel=0&modestbranding=1"
              title="{{ section.settings.heading | default: 'Video tutorial' }}"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          {% endif %}
        {% endif %}
      {% elsif section.settings.video_type == 'vimeo' %}
        {% if section.settings.vimeo_id != blank %}
          <iframe
            src="https://player.vimeo.com/video/{{ section.settings.vimeo_id }}?color=ffffff&title=0&byline=0&portrait=0"
            title="{{ section.settings.heading | default: 'Video tutorial' }}"
            frameborder="0"
            allow="autoplay; fullscreen; picture-in-picture"
            allowfullscreen>
          </iframe>
        {% endif %}
      {% elsif section.settings.video_type == 'mp4' %}
        {% if section.settings.video_file %}
          <video controls poster="{{ section.settings.thumbnail_image | image_url: width: 1200 }}">
            <source src="{{ section.settings.video_file }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% endif %}
      {% endif %}
    </div>

    {% if section.blocks.size > 0 %}
      <div class="l2l-video-features">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'feature' %}
              <div class="l2l-video-feature" {{ block.shopify_attributes }}>
                <div class="l2l-video-feature-icon">
                  {{ block.settings.icon | default: 'âœ“' }}
                </div>
                <div class="l2l-video-feature-text">
                  <h3>{{ block.settings.title }}</h3>
                  <p>{{ block.settings.description }}</p>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<script>
  function loadYouTubeVideo(sectionId, videoId) {
    const wrapper = document.getElementById('video-' + sectionId);
    wrapper.innerHTML = `<iframe
      src="https://www.youtube.com/embed/${videoId}?rel=0&modestbranding=1&autoplay=1"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen>
    </iframe>`;
  }
</script>

