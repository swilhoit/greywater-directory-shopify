<style>
  .l2l-comparison-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .l2l-comparison-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .l2l-comparison-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .l2l-comparison-header h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: {{ section.settings.heading_color }};
    margin-bottom: 1rem;
  }

  .l2l-comparison-header p {
    font-size: 1.1rem;
    color: {{ section.settings.subheading_color }};
  }

  .l2l-comparison-table {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .l2l-table {
    width: 100%;
    min-width: 600px;
    border-collapse: separate;
    border-spacing: 0;
    background: {{ section.settings.table_bg }};
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  }

  .l2l-table thead {
    background: {{ section.settings.header_bg }};
  }

  .l2l-table th {
    padding: 1.25rem;
    text-align: left;
    font-weight: 600;
    color: {{ section.settings.header_text_color }};
    border-bottom: 2px solid {{ section.settings.border_color }};
  }

  .l2l-table th:first-child {
    width: 35%;
  }

  .l2l-table tbody tr {
    transition: background 0.2s;
  }

  .l2l-table tbody tr:hover {
    background: {{ section.settings.row_hover_bg }};
  }

  .l2l-table td {
    padding: 1.25rem;
    border-bottom: 1px solid {{ section.settings.border_color }};
    color: {{ section.settings.cell_text_color }};
  }

  .l2l-table tbody tr:last-child td {
    border-bottom: none;
  }

  .l2l-feature-name {
    font-weight: 500;
    color: {{ section.settings.feature_name_color }};
  }

  .l2l-check {
    color: {{ section.settings.check_color }};
    font-size: 1.5rem;
    font-weight: bold;
  }

  .l2l-cross {
    color: {{ section.settings.cross_color }};
    font-size: 1.5rem;
  }

  .l2l-highlight {
    background: {{ section.settings.highlight_bg }};
    position: relative;
  }

  .l2l-highlight::before {
    content: '{{ section.settings.highlight_badge }}';
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    background: {{ section.settings.badge_bg }};
    color: {{ section.settings.badge_color }};
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .l2l-mobile-card {
    display: none;
  }

  @media (max-width: 768px) {
    .l2l-comparison-table {
      display: none;
    }

    .l2l-mobile-card {
      display: block;
      background: {{ section.settings.table_bg }};
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .l2l-mobile-card-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: {{ section.settings.header_text_color }};
      margin-bottom: 1rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid {{ section.settings.border_color }};
    }

    .l2l-mobile-feature {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 0;
      border-bottom: 1px solid {{ section.settings.border_color | color_modify: 'alpha', 0.3 }};
    }

    .l2l-mobile-feature:last-child {
      border-bottom: none;
    }

    .l2l-mobile-feature-name {
      font-weight: 500;
      color: {{ section.settings.feature_name_color }};
    }

    .l2l-mobile-highlight {
      background: {{ section.settings.highlight_bg }};
      margin: -1.5rem;
      padding: 1.5rem;
      border-radius: 12px;
    }

    .l2l-mobile-badge {
      display: inline-block;
      background: {{ section.settings.badge_bg }};
      color: {{ section.settings.badge_color }};
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      margin-bottom: 1rem;
    }
  }
</style>

<div class="l2l-comparison-section">
  <div class="l2l-comparison-container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="l2l-comparison-header">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p>{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <!-- Desktop Table -->
    <div class="l2l-comparison-table">
      <table class="l2l-table">
        <thead>
          <tr>
            <th>{{ section.settings.feature_column_title }}</th>
            {% for block in section.blocks %}
              {% if block.type == 'option' %}
                <th class="{% if block.settings.highlight %}l2l-highlight{% endif %}">
                  {{ block.settings.option_name }}
                </th>
              {% endif %}
            {% endfor %}
          </tr>
        </thead>
        <tbody>
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <tr>
                <td class="l2l-feature-name">{{ block.settings.feature_name }}</td>
                {% assign feature_values = block.settings.feature_values | split: ',' %}
                {% for value in feature_values %}
                  <td>
                    {% if value contains 'check' or value contains '✓' %}
                      <span class="l2l-check">✓</span>
                    {% elsif value contains 'cross' or value contains '✗' %}
                      <span class="l2l-cross">✗</span>
                    {% else %}
                      {{ value | strip }}
                    {% endif %}
                  </td>
                {% endfor %}
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>

    <!-- Mobile Cards -->
    <div class="l2l-mobile-cards">
      {% assign option_blocks = section.blocks | where: 'type', 'option' %}
      {% assign feature_blocks = section.blocks | where: 'type', 'feature' %}

      {% for option in option_blocks %}
        <div class="l2l-mobile-card {% if option.settings.highlight %}l2l-mobile-highlight{% endif %}">
          {% if option.settings.highlight and section.settings.highlight_badge != blank %}
            <div class="l2l-mobile-badge">{{ section.settings.highlight_badge }}</div>
          {% endif %}
          <div class="l2l-mobile-card-title">{{ option.settings.option_name }}</div>

          {% for feature in feature_blocks %}
            {% assign feature_values = feature.settings.feature_values | split: ',' %}
            {% assign option_index = forloop.parentloop.index0 %}
            <div class="l2l-mobile-feature">
              <span class="l2l-mobile-feature-name">{{ feature.settings.feature_name }}</span>
              <span>
                {% if feature_values[option_index] contains 'check' or feature_values[option_index] contains '✓' %}
                  <span class="l2l-check">✓</span>
                {% elsif feature_values[option_index] contains 'cross' or feature_values[option_index] contains '✗' %}
                  <span class="l2l-cross">✗</span>
                {% else %}
                  {{ feature_values[option_index] | strip }}
                {% endif %}
              </span>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

