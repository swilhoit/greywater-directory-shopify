<style>
  .l2l-stats-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_gradient }};
  }

  .l2l-stats-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .l2l-stats-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .l2l-stats-header h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: {{ section.settings.heading_color }};
    margin-bottom: 1rem;
  }

  .l2l-stats-header p {
    font-size: 1.1rem;
    color: {{ section.settings.subheading_color }};
  }

  .l2l-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .l2l-stats-grid {
      grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    }
  }

  .l2l-stat-card {
    text-align: center;
    padding: 2rem 1.5rem;
    background: {{ section.settings.card_background }};
    border-radius: 12px;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .l2l-stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .l2l-stat-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: block;
  }

  .l2l-stat-number {
    font-size: {{ section.settings.number_size }}rem;
    font-weight: bold;
    color: {{ section.settings.number_color }};
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .l2l-stat-suffix {
    font-size: 1.5rem;
    color: {{ section.settings.suffix_color }};
    margin-left: 0.25rem;
  }

  .l2l-stat-label {
    font-size: 1.1rem;
    font-weight: 600;
    color: {{ section.settings.label_color }};
    margin-bottom: 0.5rem;
  }

  .l2l-stat-description {
    font-size: 0.95rem;
    color: {{ section.settings.description_color }};
    line-height: 1.5;
  }

  @keyframes countUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .l2l-stat-card[data-animated="true"] {
    animation: countUp 0.6s ease-out;
  }
</style>

<div class="l2l-stats-section">
  <div class="l2l-stats-container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="l2l-stats-header">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p>{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="l2l-stats-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'statistic' %}
            <div class="l2l-stat-card" data-number="{{ block.settings.number }}" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <span class="l2l-stat-icon">{{ block.settings.icon }}</span>
              {% endif %}
              <div class="l2l-stat-number">
                <span class="stat-counter">{{ block.settings.number }}</span>
                {% if block.settings.suffix != blank %}
                  <span class="l2l-stat-suffix">{{ block.settings.suffix }}</span>
                {% endif %}
              </div>
              {% if block.settings.label != blank %}
                <div class="l2l-stat-label">{{ block.settings.label }}</div>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="l2l-stat-description">{{ block.settings.description }}</div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px'
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(entry => {
        if (entry.isIntersecting && !entry.target.dataset.animated) {
          entry.target.dataset.animated = 'true';

          const counter = entry.target.querySelector('.stat-counter');
          const target = parseInt(entry.target.dataset.number);
          const duration = 2000;
          const increment = target / (duration / 16);
          let current = 0;

          const updateCounter = () => {
            current += increment;
            if (current < target) {
              counter.textContent = Math.floor(current).toLocaleString();
              requestAnimationFrame(updateCounter);
            } else {
              counter.textContent = target.toLocaleString();
            }
          };

          updateCounter();
        }
      });
    }, observerOptions);

    document.querySelectorAll('.l2l-stat-card').forEach(card => {
      observer.observe(card);
    });
  });
</script>

